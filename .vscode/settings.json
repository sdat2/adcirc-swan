{
    // EDITOR SETTINGS
    // Enable automatic formatting on save
    "editor.formatOnSave": true,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.detectIndentation": true,
    "editor.roundedSelection": false,
    "editor.formatOnPaste": true,
    "explorer.openEditors.visible": 0,
    // Autosave every 2 minutes
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 120000,
    // Trailing spaces
    // Render trailing whitespaces
    "editor.renderWhitespace": "trailing",
    "workbench.colorCustomizations": {
        "activityBar.background": "#d2bf2b", //"#ff0001",
        "activityBar.foreground": "#000",
        "activityBar.activeBackground": "#0dff00",
        "statusBar.background": "#d2bf2b",
    },
    "trailing-spaces.trimOnSave": true,
    "trailing-spaces.syntaxIgnore": [
        "markdown"
    ],
    // Automatically hide these files
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/**/*.pyc": true,
        "**/*/PE*": true,
        "**/PE*": true,
    },
    // PYTHON SETTINGS
    // Python interpreter
    "python.pythonPath": "env/bin/python",
    // Set python formatter to black
    "python.formatting.provider": "black",
    // Include [extendedSummary] tag in automatic docstring generation
    "autoDocstring.includeExtendedSummary": true,
    // Start each docstring on a new line
    "autoDocstring.startOnNewLine": true,
    // format docstrings using sphinx
    // "autoDocstring.docstringFormat": "google",
    // Enable linting
    "python.linting.enabled": true,
    // Set linter to be flake8 (will then use the setup.cfg file for linting rules)
    // Automatically trim trailing whitespaces only for python files
    "[python]": {
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        // Set vertical lines through editor
        "editor.rulers": [
            88,
            120
        ],
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "fortran": {
        // Set vertical lines through editor
        "editor.rulers": [
            132,
            255
        ],
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "fortran.formatting.findentArgs": [
        "-Cn",
        "-Rr"
    ],
    "fortran.formatting.fprettifyArgs": [
        "--whitespace-comma",
        "--enable-decl"
    ],
    "cmake.configureOnOpen": true,
    "editor.guides.indentation": true
}